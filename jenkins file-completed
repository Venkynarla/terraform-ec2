pipeline{
    agent any
    stages{
        stage('scm checkout'){
            steps{
                git 'https://github.com/javaparser/javaparser-maven-sample.git'
            }
            post{
                success{
                    echo"scm-checkout done"
                }
            }
        }
        stage('build code with maven'){
            steps{
                sh 'mvn clean package'
            }
             post {
                success {
                    echo "Now Archiving the Artifacts...."
                    archiveArtifacts artifacts: '**/*.war'
                }
            }
        }
        stage('Create Docker Image'){
            agent {
                label 'task-1'
            }
            steps {
                sh "docker build -t venkatnarla3/my-image:${env.BUILD_ID} ."
            }
        }
       stage('Push Docker Image To Dockerhub'){
            agent {
                label 'task-1'
            }
            steps{
                withCredentials([usernamePassword(credentialsId: 'docker-hub', passwordVariable: 'passwd', usernameVariable: 'username')]) {
                    sh "docker login -u ${username} -p ${passwd}"
                    sh "docker push venkatnarla3/my-image:${env.BUILD_NUMBER}"
                } 
            }
        }
        stage('deploy docker container on dev'){
             agent {
                label 'task-1'
            }
            steps {
                sh 'sudo -i'
                sh 'docker run -p 8080:8080 -d --name=task-jenkins venkatnarla3/my-image:${env.BUILD_NUMBER}'
            }
            post {
                success {
                    sh 'docker images ls'
                    sh 'docker ps'
                }
            }
        }
    }
}
